@{
    ViewBag.Title = "Login";
}

<div class="login-container">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-primary mb-4">🔐 Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">📧 Email</label>
                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email" required />
            </div>

            <div class="mb-3">
                <label class="form-label">🔑 Password</label>
                <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg">🚀 Login</button>

            <p class="text-center mt-3">
                Don't have an account?
                <a href="@Url.Action("Register", "Auth")" class="text-primary fw-bold">Register here</a>
            </p>
        </form>
    </div>
</div>

<!-- 🔹 Custom Styling -->
<style>
    /* Center the form */
    .login-container {
        max-width: 400px;
        margin: 60px auto;
    }

    .card {
        border-radius: 15px;
    }

    /* Form elements */
    .form-control {
        border-radius: 10px;
        font-size: 1rem;
        padding: 10px;
    }

    .form-label {
        font-weight: bold;
    }

    /* Login button */
    .btn-primary {
        background-color: #0d6efd;
        border: none;
        font-size: 1.1rem;
        font-weight: bold;
        padding: 12px;
        transition: all 0.3s ease-in-out;
        border-radius: 10px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0px 5px 15px rgba(13, 110, 253, 0.3);
        }

    /* Register link */
    .text-primary {
        text-decoration: none;
    }

        .text-primary:hover {
            text-decoration: underline;
        }
</style>
