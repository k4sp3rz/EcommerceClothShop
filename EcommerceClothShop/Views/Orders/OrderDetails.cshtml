@model EcommerceClothShop.Models.Order

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details - #@Model.OrderID</h2>

<p><strong>Order Date:</strong> @Model.CreatedAt</p>
<p><strong>Status:</strong> @Model.OrderStatus</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>

<h3>Order Items</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@((item.Quantity * item.Price).ToString("C"))</td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Invoice", "Orders", new { id = Model.OrderID })" class="btn btn-primary">Download the details</a>


<a href="@Url.Action("OrderHistory", "Orders")" class="btn btn-primary">Back to Order History</a>
