@model IEnumerable<EcommerceClothShop.Models.DiscountPromo>
@{
    ViewBag.Title = "Manage Promo Codes";
}

<h2>Promo Codes</h2>
<p>
    <a href="@Url.Action("CreatePromo")" class="btn btn-primary">Create New Promo Code</a>
</p>

<table class="table table-bordered">
    <tr>
        <th>Code</th>
        <th>Discount</th>
        <th>Is Percentage</th>
        <th>Min Order Amount</th>
        <th>Expiry Date</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Code</td>
            <td>@item.DiscountAmount</td>
            <td>@item.IsPercentage</td>
            <td>@item.MinOrderAmount</td>
            <td>@item.ExpiryDate.ToShortDateString()</td>
            <td>
                <a href="@Url.Action("EditPromo", new { id = item.PromoID })" class="btn btn-sm btn-warning">Edit</a> |
                <a href="@Url.Action("DeletePromo", new { id = item.PromoID })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
            </td>
        </tr>
    }
</table>
