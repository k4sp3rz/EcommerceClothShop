@model EcommerceClothShop.Models.DiscountPromo
@{
    ViewBag.Title = "Delete Promo Code";
}

<h2>Are you sure you want to delete this Promo Code?</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Code</dt>
        <dd class="col-sm-9">@Model.Code</dd>

        <dt class="col-sm-3">Discount Amount</dt>
        <dd class="col-sm-9">@Model.DiscountAmount</dd>

        <dt class="col-sm-3">Is Percentage</dt>
        <dd class="col-sm-9">@Model.IsPercentage</dd>

        <dt class="col-sm-3">Min Order Amount</dt>
        <dd class="col-sm-9">@Model.MinOrderAmount</dd>

        <dt class="col-sm-3">Expiry Date</dt>
        <dd class="col-sm-9">@Model.ExpiryDate.ToShortDateString()</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PromoID)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("PromoIndex")" class="btn btn-secondary">Cancel</a>
    }
</div>

