@model EcommerceClothShop.Models.DiscountPromo
@{
    ViewBag.Title = "Edit Promo Code";
}

<h2>Edit Promo Code</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.PromoID)

    <div class="form-group">
        @Html.LabelFor(model => model.Code)
        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DiscountAmount)
        @Html.EditorFor(model => model.DiscountAmount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsPercentage)
        @Html.CheckBoxFor(model => model.IsPercentage)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MinOrderAmount)
        @Html.EditorFor(model => model.MinOrderAmount, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExpiryDate)
        @Html.TextBoxFor(model => model.ExpiryDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("PromoIndex")" class="btn btn-secondary">Back</a>
}
