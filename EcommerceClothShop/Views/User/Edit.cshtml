@model EcommerceClothShop.Models.User

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Edit Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card mt-3">
    <div class="card-body">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.UserID) <!-- Make sure ID is passed -->
            @Html.HiddenFor(model => model.Email) <!-- Email should not be changed -->

            <div class="form-group">
                <label>Email (Cannot be changed)</label>
                <input type="email" class="form-control" value="@Model.Email" readonly />
            </div>

            <div class="form-group mt-2">
                <label>Full Name</label>
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group mt-2">
                <label>Phone Number</label>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Enter phone number" })
            </div>

            <div class="form-group mt-2">
                <label>Address</label>
                @Html.TextAreaFor(model => model.Address, new { @class = "form-control", placeholder = "Enter address" })
            </div>

            <div class="form-group mt-2">
                <label>New Password</label>
                @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control", placeholder = "Leave empty to keep current password" })
            </div>

            <button type="submit" class="btn btn-success mt-3">Save Changes</button>
            <a href="@Url.Action("Details", "User")" class="btn btn-secondary mt-3">Cancel</a>
        }
    </div>
</div>
